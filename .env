# Environment Configuration for WatchHub Development
NODE_ENV=development
PORT=4000

# MongoDB connection string (Fallback to in-memory for development)
MONGO_URI=mongodb://0.0.0.0:27017/watchhub

# JWT Configuration
JWT_SECRET=WatchHub_JWT_Secret_Key_2025_Development
JWT_EXPIRE=7d
COOKIE_EXPIRE=5

# Sendgrid Configuration (Update with your credentials)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_MAIL=noreply@watchhub.com
SENDGRID_RESET_TEMPLATEID=d-your_template_id
SENDGRID_ORDER_TEMPLATEID=d-your_order_template_id

# Cloudinary Configuration (Update with your credentials)
CLOUDINARY_NAME=watchhub
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Paytm Configuration (Update with your credentials)
PAYTM_MID=your_paytm_merchant_id
PAYTM_MERCHANT_KEY=your_paytm_merchant_key
PAYTM_WEBSITE=WEBSTAGING
PAYTM_CHANNEL_ID=WEB
PAYTM_INDUSTRY_TYPE=Retail
PAYTM_CUST_ID=your_customer_id

# Optional: Stripe Configuration
STRIPE_API_KEY=your_stripe_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key