# Frontend Environment Configuration
# Copy this file to .env and fill in your values

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:5000

# Razorpay Configuration (for payment processing)
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id

# Environment
VITE_NODE_ENV=development

# Google OAuth Redirect URL (backend endpoint)
VITE_GOOGLE_OAUTH_REDIRECT_URL=http://localhost:5000/auth/google

# Payment URLs
VITE_PAYMENT_SUCCESS_URL=http://localhost:8080/payment/success
VITE_PAYMENT_FAILURE_URL=http://localhost:8080/payment/failure

# Application Configuration
VITE_APP_NAME=Chronos Watch Shop
VITE_APP_VERSION=1.0.0